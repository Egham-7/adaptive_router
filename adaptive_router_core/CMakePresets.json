{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "conan-default",
      "displayName": "Conan Default Config",
      "description": "Default build using Conan toolchain",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "conan-debug",
      "displayName": "Debug Build",
      "description": "Debug build using Conan toolchain",
      "inherits": "conan-default",
      "binaryDir": "${sourceDir}/build/build/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "toolchainFile": "${sourceDir}/build/conan_toolchain.cmake"
    },
    {
      "name": "conan-release",
      "displayName": "Release Build",
      "description": "Release build using Conan toolchain",
      "inherits": "conan-default",
      "binaryDir": "${sourceDir}/build/build/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "toolchainFile": "${sourceDir}/build/conan_toolchain.cmake"
    }
  ],
  "buildPresets": [
    {
      "name": "conan-debug",
      "configurePreset": "conan-debug",
      "jobs": 0
    },
    {
      "name": "conan-release",
      "configurePreset": "conan-release",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "conan-debug",
      "configurePreset": "conan-debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 0
      }
    },
    {
      "name": "conan-release",
      "configurePreset": "conan-release",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 0
      }
    }
  ]
}
